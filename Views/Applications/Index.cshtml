@model IEnumerable<ProjetRec.Models.Application>

@{
    ViewData["Title"] = "Index";
}

<h1>My Applications</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Candidat.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job.Title)
            </td>

        </tr>
}
    </tbody>
</table>
