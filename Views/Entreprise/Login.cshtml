@model ProjetRec.Models.Entreprise

@{
    ViewData["Title"] = "Login";
}

<!-- Custom Style -->
<style>
    .background-image {
        background-image: url('https://w7.pngwing.com/pngs/597/406/png-transparent-internet-enterprise-business-background-company-website-banner-corporate-banner-tech-internet.png'); /* Replace with your image path */
        background-size: cover;
        background-position: center;
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: -1;
    }

    .login-container {
        margin-top: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-form {
        padding: 25px;
        background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent background */
        border-radius: 10px;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    }

    .login-heading {
        margin-bottom: 20px;
        text-align: center;
    }
</style>

<div class="background-image"></div> <!-- Background Image -->

<div class="container login-container">
    <div class="col-md-4 login-form">
        <h1 class="login-heading">Login</h1>
        <hr />

        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
