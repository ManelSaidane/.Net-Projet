@model IEnumerable<ProjetRec.Models.Job>

@{
    ViewData["Title"] = "Available Jobs";
}

<!-- Custom Style -->
<style>
    .page-header {
        text-align: center;
        margin-top: 20px;
        margin-bottom: 40px;
    }

    .table-container {
        margin-top: 20px;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        border-radius: 5px;
    }

    .table-hover tbody tr:hover td,
    .table-hover tbody tr:hover th {
        background-color: #f5f5f5;
    }

    .logout-link {
        text-align: center;
        margin-top: 30px;
    }

    .details-link {
        margin-right: 10px;
    }
</style>

<div class="container">
    <h1 class="page-header">Available Jobs</h1>

    <div class="table-container">
        <table class="table table-hover">
            <thead class="thead-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.SkillsNeeded)</th>
                    <th>@Html.DisplayNameFor(model => model.Location)</th>
                    <th>@Html.DisplayNameFor(model => model.Entreprise)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.SkillsNeeded)</td>
                        <td>@Html.DisplayFor(modelItem => item.Location)</td>
                        <td>@Html.DisplayFor(modelItem => item.Entreprise.Name)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm details-link">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="logout-link">
        <a asp-action="LogoutCandidat" class="btn btn-secondary">Log Out</a>
    </div>
</div>
