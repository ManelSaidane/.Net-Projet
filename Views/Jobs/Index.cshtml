@model IEnumerable<ProjetRec.Models.Job>

@{
    ViewData["Title"] = "Job Listings";
}

<!-- Custom Style -->
<style>
    .page-header {
        margin-top: 20px;
        margin-bottom: 40px;
        text-align: center;
    }

    .create-new-link {
        text-align: right;
        margin-bottom: 20px;
    }

    .table-responsive {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        border-radius: 5px;
    }

    .table-hover tbody tr:hover td,
    .table-hover tbody tr:hover th {
        background-color: #f5f5f5;
    }

    .action-links a {
        margin-right: 10px;
    }

    .logout-link {
        text-align: center;
        margin-top: 30px;
    }
</style>

<div class="container">
    <h1 class="page-header">Job Listings</h1>

    <div class="create-new-link">
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="thead-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.SkillsNeeded)</th>
                    <th>@Html.DisplayNameFor(model => model.Location)</th>
                    <th>@Html.DisplayNameFor(model => model.Entreprise)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.SkillsNeeded)</td>
                        <td>@Html.DisplayFor(modelItem => item.Location)</td>
                        <td>@Html.DisplayFor(modelItem => item.Entreprise.Name)</td>
                        <td class="action-links">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                            <a asp-action="DetailsCandidat" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="logout-link">
        <a asp-action="LogoutEntreprise" class="btn btn-secondary">Log Out</a>
    </div>
</div>
