@model ProjetRec.Models.Job

@{
    ViewData["Title"] = "Delete Job";
}

<!-- Custom Style -->
<style>
    .delete-container {
        margin-top: 20px;
        padding: 25px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    }

    .delete-heading {
        text-align: center;
        margin-bottom: 20px;
    }

    .confirmation-text {
        text-align: center;
        margin-bottom: 20px;
        font-size: 1.2em;
        color: #ff0000; /* Red color for attention */
    }

    .action-links {
        text-align: center;
        margin-top: 20px;
    }
</style>

<div class="container">
    <div class="delete-container">
        <h1 class="delete-heading">Delete Job</h1>
        <hr />

        <p class="confirmation-text">Are you sure you want to delete this?</p>

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <!-- Similar structure for other details -->
        </dl>

        <div class="action-links">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
                <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
            </form>
        </div>
    </div>
</div>
